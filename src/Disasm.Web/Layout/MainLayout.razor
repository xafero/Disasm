@inherits LayoutComponentBase
<div class="page">
    <main>
        <div class="top-row px-4">
            
            <select class="form-select" aria-label="Arch">
                <option>x86</option>
                <option>sh3</option>
            </select>

            <select class="form-select" aria-label="Bit">
                <option>16 Bit</option>
            </select>

            <select class="form-select" aria-label="Order">
                <option>Little Endian</option>
            </select>

            <input class="form-control" aria-label="Base"
                   readonly value="0x0" />

            <select class="form-select" aria-label="Style">
                <option>Prettified</option>
            </select>

            <a href="https://github.com/xafero/Disasm" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
